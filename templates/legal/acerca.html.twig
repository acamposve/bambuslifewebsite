{% block title %}Acerca de BambusLife | BambusLife{% endblock %}

{% block description %}Acerca de BambusLife | BambusLife{% endblock %}


{% block header %}
  {{ render(controller('App\\Controller\\Components\\HeaderController::index')) }}
