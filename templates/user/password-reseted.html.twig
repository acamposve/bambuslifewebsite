{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('resetPassword') }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('resetPassword') }}
{% endblock %}

{% block title %}Recuperar contrase&ntilde;a | BambusLife{% endblock %}

{% block body %}

<div class="container">
  <div class="columns" style="max-width: 400px;margin: 0 auto;border: 1px solid #DDD;border-radius: 5px;">
    <div class="column">
      <div style="text-align: center;padding-top: 23px;">
        <picture>
          <source srcset="{{asset('build/images/logo72.webp')}}" type="image/webp">
          <source srcset="{{asset('build/images/logo72.png')}}" type="image/png">
          <img src="{{asset('build/images/logo72.png')}}" alt="BambusLife"  width="72" height="32">
        </picture>
      </div>
      <div style="text-align: center;margin-top: 30px;">
        <h3 class="subtitle is-5">Contrase&ntilde;a actualizada</h3>
        <p>Haga click en iniciar sesión para ingresar</p>
      </div>
      {% if error %}
        <article class="message is-danger">
          <div class="message-body">
            {{ error }}
          </div>
        </article>
      {% endif %}

      <div class="field" style="margin: 30px 0px;display: flex;justify-content: center;">
        <p class="control">
          <a href="{{link}}" class="button is-primary" type="submit" id="btnContinue">
            Iniciar sesión
          </a>
        </p>
      </div>

    </div>
  </div>

  <div class="columns is-multiline is-mobile" style="max-width: 400px;margin: 0 auto;margin-top: 30px;font-size: 11px;">
    <div class="column is-12" style="padding: 0px 10px;">
      BambusLife © 2020
    </div>
    <div class="column is-12">
      <a href="{{ path('privacy_policy') }}">Pol&iacute;tica de privacidad</a>
      &nbsp;&nbsp;
      <a href="{{ path('terms_conditions') }}">T&eacute;rminos y condiciones</a>
    </div>
  </div>

</div>

{% endblock %}

